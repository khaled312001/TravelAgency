{
  // Nuxt-friendly TS config that also works without the generated .nuxt folder
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    }
  },
  "vueCompilerOptions": {
    // Point Vue's TS plugin to our local global types to avoid write errors
    "globalTypesPath": "./types/shims.d.ts",
    "globalTypes": ["./types/shims.d.ts"],
    "types": ["./types/shims.d.ts"]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.vue", "types/**/*.d.ts"],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
